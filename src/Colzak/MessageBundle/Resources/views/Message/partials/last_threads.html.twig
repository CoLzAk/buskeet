{% if threads|length > 0 %}
	{% for thread in threads %}
		{% for message in thread.messages %}
			{% if loop.last %}
				<li><a href="{{ path('colzak_user_thread', { threadId: thread.id }) }}">{{ message.message }}</a></li>
			{% endif %}
		{% endfor %}
	{% endfor %}
{% else %}
	<li><a>Aucun message</a></li>
{% endif %}
<li class="divider"></li>
<li><a href="{{ path('colzak_user_inbox') }}"><span class="glyphicon glyphicon-envelope"></span> Messagerie</a></li>
