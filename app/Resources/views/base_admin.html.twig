<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets
                "bootstrap/css/bootstrap.min.css"
                "css/admin.css"
                filter="cssrewrite"
            %}
                <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
            {% endstylesheets %}
            {% block extra_stylesheets %}{% endblock %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="clzk-global-page-wrapper">
            <header class="clzk-header">
                {% block header %}
                    <div class="navbar navbar-default">
                        <div class="container">
                            <div class="navbar-header">
                                <a class="navbar-brand" href="{{ path('colzak_admin_homepage') }}">Administration</a>
                            </div>
                             <div class="collapse navbar-collapse">
                                {#<ul class="nav navbar-nav navbar-right clzk-menu">
                                    <li><a href="{{ path('colzak_admin_categories') }}">Catégories</a></li>
                                    <li><a href="{{ path('colzak_admin_articles') }}">Articles</a></li>
                                    <li><a href="{{ path('colzak_admin_users') }}">Membres</a></li>
                                    <li><a href="{{ path('colzak_admin_games') }}">Matches</a></li>
                                    <li><a href="{{ path('colzak_admin_teams') }}">Equipes</a></li>
                                    <li><a href="{{ path('colzak_admin_messages') }}">Messages</a></li>
                                    <li><a href="{{ path('fos_user_security_logout') }}"><span class="text-danger"><span class="glyphicon glyphicon-off"></span>&nbsp;Déconnexion</span></a></li>
                                </ul>#}
                             </div>
                        </div>
                    </div>
                {% endblock %}
            </header>
            <div class="clzk-body">
                {% block pre_body %}{% endblock %}
                <div class="container">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
        {#<footer class="clzk-footer">
            {% block footer %}
                <div class="navbar navbar-default" role="navigation">
                    <div class="container">
                        <p class="text-center clzk-footer-text">Copyright © 2014 Colzak</p>
                    </div>
                </div>
            {% endblock %}
        </footer>#}
        {% block modal %}
            <div class="modal fade" id="clzk-modal" role="dialog">
                <div class="modal-dialog container">
                    <div class="modal-content" id="clzk-modal-region">
                    </div>
                </div>
            </div>
        {% endblock %}
        {% block javascripts %}
            {% javascripts
                "js/jquery/jquery.min.js"
                "bootstrap/js/bootstrap.min.js"
            %}
                <script src="{{ asset_url }}" type="text/javascript"></script>
            {% endjavascripts %}
            {% block extra_javascripts %}{% endblock %}
        {% endblock %}
    </body>
</html>
