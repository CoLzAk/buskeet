<script type="text/template" id="clzk-profile-picture-template">
    <a data-toggle="modal" id="gallery" href="#">
        <% if (picture.profile_picture === true) { %>
            <img src="<%= picture.thumb_path %>" alt="..." class="img-thumbnail img-responsive">
        <% } %>
    </a>
</script>

<script type="text/template" id="clzk-profile-picture-empty-template">
    <img src="/img/user_256.png" alt="..." class="img-thumbnail clzk-profile-picture">
</script>

<script type="text/template" id="clzk-profile-pictures-carousel-template">
    <div id="cn-profile-photos-carousel" class="carousel slide">
        <button type="button" class="close close-carousel-btn" data-dismiss="modal" aria-hidden="true">&times;</button>
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <% for (var i in pictures) { %>
               <li data-target="#cn-profile-photos-carousel" data-slide-to="<%= i %>" <% if(pictures[i].profile_picture) { %> class="active"<% } %>></li>
            <% } %>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <% for (var i in pictures) { %>
                <div class="item <% if(pictures[i].profile_picture) { %> active<% } %>">
                    <img src="<%= pictures[i].path %>" class="img-responsive"/>
                </div>
            <% } %>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#cn-profile-photos-carousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#cn-profile-photos-carousel" data-slide="next">
            <span class="icon-next"></span>
        </a>
    </div>
</script>

