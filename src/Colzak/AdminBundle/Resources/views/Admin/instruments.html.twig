{% extends 'ColzakAdminBundle::layout.html.twig' %}

{% block body %}
    <a href="{{ path('colzak_admin_instruments_add') }}"><span class="glyphicon glyphicon-plus"></span>&nbsp;Add Instrument</a>
    <div class="table-responsive">
        <table class="table-hover table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Icon Path</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for instrument in instruments %}
                	<tr>
                        <td>
                            {{ instrument.id }}
                        </td>
                        <td>
                            <img src="/img/instruments/{{ instrument.category }}.png" width="40"> - {{ instrument.name }}
                        </td>
                        <td>
                            {{ instrument.category }}
                        </td>
                        <td>
                            {{ instrument.iconPath }}
                        </td>
                        <td>
                            <a href="{{ path('colzak_admin_instruments_delete', { id: instrument.id }) }}" class="btn btn-danger btn-sm">
                                <span class="glyphicon glyphicon-remove"></span> Supprimer
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}