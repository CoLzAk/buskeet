{% form_theme form 'ColzakUserBundle:Form:fields.html.twig' %}
<div class="col-md-12">
	<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register" role="form">
	    {{ form_widget(form.email) }}
	    {{ form_widget(form.username) }}
	    {{ form_widget(form.plainPassword.first) }}
	    {{ form_widget(form.plainPassword.second) }}
	    {{ form_rest(form) }}
        <button type="submit" id="_submit" name="_submit" class="btn btn-default btn-block">S'inscrire</button>
	</form>
</div>