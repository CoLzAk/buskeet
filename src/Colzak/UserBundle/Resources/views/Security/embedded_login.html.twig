    <input type="hidden" name="_target_path" value="{{ currentUrl }}" />

    <div class="form-group">
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control input-sm" placeholder="Adresse e-mail" />
    </div>
