<script type="text/template" id="clzk-profile-portfolio-template">
    <div class="col-md-4 col-sm-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="text-left">Styles musicaux</span>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled">
                    <li>Reggae</li>
                    <li>Séga</li>
                    <li>Maloya</li>
                    <li>Pop/Folk</li>
                </ul>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="text-left">Instruments</span>
                {% if targetUser == app.user %}
                    <a href="#" class="pull-right edit-btn" data-edit="instruments">[ modifier ]</a>
                {% endif %}
            </div>
            <div class="panel-body">
                <ul class="list-unstyled">
                    <% for (var i in portfolio.instruments) { %>
                        <li><%= portfolio.instruments[i].name %></li>
                    <% } %>
                </ul>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="text-left">Influences</span>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled">
                    <li>Moriarty</li>
                    <li>John Butler Trio</li>
                    <li>Patrice</li>
                    <li>Aldebert</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-8 col-sm-8">
        {#} Un premier "panel" avec le type de profil recherché + description(avec des icones a l'interieur)
            ex. Recherche guitariste/chanteur de blues confirmé
        {#}
        <h2>
            <span class="clzk-profile-portfolio-title">Ce que je recherche</span>
            {% if targetUser == app.user %}
                <a href="#" class="pull-right edit-btn" data-edit="targets">[ modifier ]</a>
            {% endif %}
        </h2>
        
        
        <p id="profile-portfolio-targets-description"></p>
        <div class="targets-picto-container row">
            <% for (var i in portfolio.targets) { %>
                <div class="targets-picto col-md-2 col-sm-3 col-xs-4">
                    <p class="text-center"><%= portfolio.targets[i].name %></p>
                </div>
            <% } %>
        </div>
        
        {#} Un deuxième panel avec les objectifs
            ex. Sortir un album tribute to oasis
            ex. Monter sur scène pour la fête de la musique
        {#}
        <h2>
            <span class="clzk-profile-portfolio-title">Ce que je souhaite faire</span>
            {% if targetUser == app.user %}
                <a href="#" class="pull-right edit-btn" data-edit="objectives">[ modifier ]</a>
            {% endif %}
        </h2>
        <% for (var i in portfolio.objectives) { %>
            <div class="col-md-4">
                <span>
                    Du <%= moment(portfolio.objectives[i].start_date, "YYYY-MM-DD\\THH:mm:ssZZ").format("DD/MM/YYYY") %>
                    au <%= moment(portfolio.objectives[i].end_date, "YYYY-MM-DD\\THH:mm:ssZZ").format("DD/MM/YYYY") %>
                </span>
            </div>
            <div class="col-md-8">
                <p><%= portfolio.objectives[i].title %></p>
                <p><%= portfolio.objectives[i].content %></p>
                <div class="row">
                    <div class="col-md-8">
                        <p>PARTICIPANTS:</p>
                        <img src="/img/user_128.png" class="img-responsive img-thumbnail clzk-portfolio-participants">
                        <img src="/img/user_128.png" class="img-responsive img-thumbnail clzk-portfolio-participants">
                        <img src="/img/user_128.png" class="img-responsive img-thumbnail clzk-portfolio-participants">
                        <img src="/img/user_128.png" class="img-responsive img-thumbnail clzk-portfolio-participants">
                    </div>
                    <div class="col-md-4">
                        {#% if is_granted('ROLE_USER') and targetUser != app.user %#}
                            <a href="#" class="participate-btn btn btn-secondary btn-block">Participer</a>
                        {#% endif %#}
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <hr>
        <% } %>
    </div>
</script>

<script type="text/template" id="clzk-profile-portfolio-form-template">
    <div class="modal-header">
        <button type="button" class="close close-modal-btn" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h1>Mon portfolio</h1>
    </div>
    <div class="modal-body">
        <div class="panel-group" id="accordion">
            {#} Instruments {#}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#instrumentsCollapse">
                          Instruments
                        </a>
                    </h4>
                </div>
                <div id="instrumentsCollapse" class="panel-collapse collapse <% if (edit == 'instruments') { %>in<% } %>">
                    <div class="panel-body">
                        <input type="text" class="form-control" id="profile-portfolio-instruments" placeholder="Ajouter un instrument">
                        <ul class="list-group" id="profile-portfolio-instruments-results"></ul>
                        <ul class="list-unstyled" id="profile-portfolio-instruments-list"></ul>
                    </div>
                </div>
            </div>

            {#} Targets {#}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#targetsCollapse">
                          Targets
                        </a>
                    </h4>
                </div>
                <div id="targetsCollapse" class="panel-collapse collapse <% if (edit == 'targets') { %>in<% } %>">
                    <div class="panel-body">
                        <textarea class="form-control" row="5" id="profile-portfolio-targets-description"></textarea>
                        <hr>
                        <input type="text" class="form-control" id="profile-portfolio-targets" placeholder="Ajouter une cible">
                        <ul class="list-group" id="profile-portfolio-targets-results"></ul>
                        <ul class="list-unstyled" id="profile-portfolio-targets-list"></ul>
                    </div>
                </div>
            </div>

            {#} Objectives {#}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#objectivesCollapse">
                          Objectives
                        </a>
                    </h4>
                </div>
                <div id="objectivesCollapse" class="panel-collapse collapse <% if (edit == 'objectives') { %>in<% } %>">
                    <div class="panel-body">
                        <input type="text" class="form-control" id="profile-portfolio-objective-title" placeholder="Titre">
                        <hr>
                        <textarea class="form-control" row="5" id="profile-portfolio-objective-description"></textarea>
                        <hr>
                        <div class="row">
                            <div class="col-md-6">
                                <input type="text" class="form-control datepicker" id="profile-portfolio-objective-startDate" placeholder="Début">
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control datepicker" id="profile-portfolio-objective-endDate" placeholder="Fin">
                            </div>
                        </div>
                        <hr>
                        <a href="#" class="btn btn-default btn-block" id="add-objective-btn">Ajouter</a>
                        <div class="row" id="profile-portfolio-objectives-result"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default close-modal-btn" data-dismiss="modal">Fermer</button>
        <button type="button" class="btn btn-primary save-modal-btn">Valider</button>
    </div>
</script>