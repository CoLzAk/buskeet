<script type="text/template" id="clzk-profile-informations-template">
    <h1 class="text-left mt0">
        <span id="clzk-profile-firstname"></span>&nbsp;<span id="clzk-profile-lastname"></span>
    </h1>
    <p class="text-left">
        <span id="clzk-profile-birthdate"></span>, <span id="clzk-profile-locality"></span>
    </p>
    <!-- <hr class="clzk-hr"> -->
    <h4 class="mt3 text-cyan">A propos de moi:</h4>
    <p class="text-left" id="clzk-profile-description"></p>
</script>

<script type="text/template" id="clzk-profile-informations-form-template">
    <div class="row clzk-edit-header">
        <div class="col-md-6">
            <h1 class="text-left mt0 mb1">Mes informations</h1>
        </div>
        <div class="col-md-6">
            <div class="btn-group pull-right">
                <a class="btn btn-default cancel-button" href="#"><span class="glyphicon glyphicon-remove"></span>&nbsp;Retour</a>
                <a class="btn btn-primary save-button" href="#"><span class="glyphicon glyphicon-ok"></span>&nbsp;Enregistrer les modifications</a>
            </div>
        </div>
        <div class="clearfix"></div>
        <hr class="mt0">
    </div>

    <div class="mt6"></div>

    <div class="row">
        <div class="col-md-8">
            {#} Birthdate {#}
            <div class="form-horizontal mt2">
                <h4 class="text-cyan">Date de naissance</h4>
                <div class="col-md-12 bg-dark">
                    <div class="row birthdate-container">
                        <input type="hidden" class="form-control clzk-form-control datepicker" id="clzk-profile-birthdate">
                        <div class="col-md-4">
                            <div class="clzk-moz-select">
                                <select id="birthdate-day-selector" class="birthdate-selector">
                                    <% for (var day in dayRange) { %>
                                        <option value="<%= dayRange[day] %>"><%= dayRange[day] %></option>
                                    <% } %>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="clzk-moz-select">
                                <select id="birthdate-month-selector" class="birthdate-selector">
                                    <% for (var month in monthRange) { %>
                                        <option value="<%= month %>"><%= monthRange[month] %></option>
                                    <% } %>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="clzk-moz-select">
                                <select id="birthdate-year-selector" class="birthdate-selector">
                                    <% for (var year in yearRange) { %>
                                        <option value="<%= yearRange[year] %>"><%= yearRange[year] %></option>
                                    <% } %>
                                </select>
                            </div>
                        </div>
                        <!-- <span class="input-group-addon glyphicon glyphicon-calendar"></span> -->
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="col-md-8">
            {#} Description {#}
            <div class="form-horizontal mt2">
                <h4 class="text-cyan">Ma description</h4>
                <div class="col-md-12 bg-dark">
                    <div class="input-group col-md-12 mt1 mb1">
                        <textarea class="form-control clzk-form-control" rows="8" id="clzk-profile-description" placeholder="Ma description..."></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="col-md-8">
            {#} Address {#}
            <div class="form-horizontal mt2" role="form">
                <h4 class="text-cyan">Mon adresse</h4>
                <div class="col-md-12 bg-dark">
                    <div class="col-md-12 input-group mb1 mt1">
                        <input type="text" class="form-control clzk-form-control" id="clzk-profile-address-input" placeholder="Ville ou code postal">
                        <span class="input-group-addon clzk-input-group-addon glyphicon glyphicon-map-marker"></span>
                    </div>
                </div>
                <input type="hidden" id="clzk-profile-street-number">
                <input type="hidden" id="clzk-profile-route">
                <input type="hidden" id="clzk-profile-locality">
                <input type="hidden" id="clzk-profile-sublocality">
                <input type="hidden" id="clzk-profile-postal-code">
                <input type="hidden" id="clzk-profile-administrative-area-level-1">
                <input type="hidden" id="clzk-profile-administrative-area-level-2">
                <input type="hidden" id="clzk-profile-country">
                <input type="hidden" id="clzk-profile-lat">
                <input type="hidden" id="clzk-profile-lon">
            </div>
            <div class="clearfix"></div>
            <div class="row">
                <div id="map-container" class="col-md-12 mt2">
                    <div id="map"></div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</script>